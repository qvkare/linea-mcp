# Network Configuration
LINEA_MAINNET_RPC_URL=https://rpc.linea.build
LINEA_TESTNET_RPC_URL=https://rpc.sepolia.linea.build

# API Keys (Replace with your actual keys)
INFURA_API_KEY=your_infura_key_here
ALCHEMY_API_KEY=your_alchemy_key_here

# Security
PRIVATE_KEY_ENCRYPTION_KEY=your_encryption_key_here

WALLET_PRIVATE_KEY=your_private_key_here
# Wallet Configuration (Replace with your actual wallet private key or mnemonic)
# For private key (64 character hex string without 0x prefix): 
# WALLET_PRIVATE_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
# OR for mnemonic (12 or 24 word seed phrase):
# WALLET_PRIVATE_KEY=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12

# Server Configuration
PORT=3000
NODE_ENV=development

# Bridge Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key_here
ETHEREUM_TESTNET_RPC_URL=https://sepolia.infura.io/v3/your_infura_key_here
